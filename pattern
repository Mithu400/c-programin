// number pattern
#include<stdio.h>
void main()
{
  int i,j,n;
  printf(" enter the value: ");
  scanf("%d",&n);
  for(i=0;i<=n;i++)
  {
      for(j =0;j<=i;j++)
      {
      printf("%d",j);
      }
printf("\n");
     }
  }
________________________________________________________
OUTPUT
 enter the value: 8
0
01
012
0123
01234
012345
0123456
01234567
012345678
_____________________________________________________________

